# Ostad Hatami Bot Environment Configuration
# Copy this file to .env and fill in your values

# Required: Your bot token from @BotFather
BOT_TOKEN=your_bot_token_here
ENCRYPTION_KEY=please_set_32bytes_urlsafe_b64

# Optional: Environment (development/production)
ENVIRONMENT=production

# Railway Deployment Configuration
# Railway will automatically set PORT and RAILWAY_PUBLIC_DOMAIN
# If you want to use a custom webhook URL, set WEBHOOK_URL
WEBHOOK_URL=https://yourdomain.com
# Or let Railway auto-generate from RAILWAY_PUBLIC_DOMAIN

# Optional: Force polling mode (set to true to disable webhook)
FORCE_POLLING=false

# Optional: Webhook secret token (auto-generated if not set)
WEBHOOK_SECRET=your_webhook_secret_here

# Admin Configuration
# Comma-separated list of admin user IDs
ADMIN_USER_IDS=123456789,987654321
ADMIN_DASHBOARD_TOKEN=change_me_secure_token

# Payment Configuration
PAYMENT_CARD_NUMBER=6037-9977-1234-5678
PAYMENT_PAYEE_NAME=استاد حاتمی

# Database Configuration (production should use PostgreSQL)
DATABASE_URL=
DB_TYPE=sqlite
DB_PATH=data
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL_HOURS=24
DB_MAX_BACKUP_FILES=7

# Performance Configuration
CACHE_TTL_SECONDS=300
MAX_REQUESTS_PER_MINUTE=10
CLEANUP_INTERVAL_SECONDS=300
MAX_CONCURRENT_USERS=1000
REQUEST_TIMEOUT_SECONDS=30
ENABLE_COMPRESSION=true

# Security Configuration
MAX_NAME_LENGTH=50
MIN_NAME_LENGTH=2
ENABLE_INPUT_SANITIZATION=true
MAX_FILE_SIZE_MB=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5
PERFORMANCE_LOG_ENABLED=true

# Maintenance Mode (set to true to disable bot temporarily)
MAINTENANCE_MODE=false
